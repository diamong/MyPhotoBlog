<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout

            android:padding="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blog_post_profile_image"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/blog_post_user_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="User Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/blog_post_date"
                    android:textSize="14sp"
                    android:text="date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    <ImageView
        android:id="@+id/blog_post_image"
        android:scaleType="centerCrop"
        android:src="@drawable/image_sunset"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/blog_post_description"
        android:layout_marginTop="8dp"
        android:text="asldkfjalskdfjlaskdfjlasjkdflasdfjlaskdfjlasjkdflaskdfjlasdfjlkasjdflasjkdflasdfjasdfkljasldfjlas;dfj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>